<UserControl x:Class="VirtuellesBetriebssystem.Views.LockScreen.LockScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VirtuellesBetriebssystem.Views.LockScreen"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF1A2980" Offset="0"/>
                <GradientStop Color="#FF26D0CE" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Uhrzeit und Datum -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <TextBlock x:Name="TimeTextBlock" 
                       Text="00:00" 
                       FontSize="72" 
                       FontWeight="Light" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="DateTextBlock" 
                       Text="Montag, 1. Januar 2024" 
                       FontSize="24" 
                       Foreground="White" 
                       Opacity="0.8" 
                       HorizontalAlignment="Center"
                       Margin="0,10,0,30"/>
        </StackPanel>
        
        <!-- Entsperrbereich -->
        <Border Grid.Row="2" 
                Background="#22FFFFFF" 
                CornerRadius="8" 
                Width="350" 
                HorizontalAlignment="Center"
                Margin="0,0,0,20">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                           Text="Anmelden" 
                           FontSize="20" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,15"/>
                
                <PasswordBox Grid.Row="1" 
                             x:Name="PasswordBox"
                             materialDesign:HintAssist.Hint="Passwort eingeben" 
                             FontSize="16"
                             Foreground="White"
                             BorderBrush="White"
                             CaretBrush="White"
                             Margin="0,0,0,15"
                             KeyDown="PasswordBox_KeyDown"
                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"/>
                
                <Button Grid.Row="2" 
                        Content="Entsperren" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Foreground="White"
                        BorderBrush="White"
                        Width="150"
                        Height="40"
                        Click="UnlockButton_Click"
                        HorizontalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Statusleiste -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" 
                    Margin="15">
            
            <materialDesign:PackIcon Kind="Wifi" 
                                  Foreground="White" 
                                  Margin="4,0" 
                                  VerticalAlignment="Center"/>
            <materialDesign:PackIcon Kind="BatteryHigh" 
                                  Foreground="White" 
                                  Margin="4,0" 
                                  VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>